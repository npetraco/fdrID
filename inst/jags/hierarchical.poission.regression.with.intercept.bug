model
{
    for (i in 1:K) {
        for (j in 1:degree) {
            zb.tmp[i, j] <- beta[j] * z[i, j]
        }
    }
    for (i in 1:K) {
        y[i] ~ dpois(lambda[i])
        log(lambda[i]) <- offset + sum(zb.tmp[i, ])
    }
    offset ~ dnorm(0.00000E+00, tau.beta)
    for (j in 1:degree) {
        beta[j] ~ dnorm(0.00000E+00, tau.beta)
    }
    tau.beta <- pow(sig.beta, -2)
    sig.beta ~ dunif(0.00000E+00, 100)
}
